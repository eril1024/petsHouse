<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pet.ex.mapper.CategoryMapper">



	
	 <select id="getGoods" resultType="GoodsVO"> 
     <![CDATA[ 
	select * from goods
	]]> 
	</select> 
	
	
<select id="getCategory" resultType="CategoryVO"> 
     <![CDATA[ 
        select level, CATEGORY_ID, CATEGORYNAME, CODE from category
        start with CODE is null connect by prior CATEGORY_ID = CODE and CATEGORY_ID<7
    ]]> 
   </select> 


<select id="getScategory" resultType="CategoryVO"> 
     <![CDATA[ 
        select categoryname , code from category WHERE code = code
    ]]> 
   </select> 
	
	
	
	<select id="getbigcategory" resultType="GoodsVO"> 
     <![CDATA[ 
      select * from goods where category_id =#{category_id}
    ]]> 
   </select> 
   
   	<select id=" getSmallGoods" resultType="GoodsVO"> 
     <![CDATA[ 
	select * from goods where category_id = 6
    ]]> 
   </select> 
   
   
  
