	<!-- 노하우, 질답 글 수정 -->
	<select id="modify">
		<![CDATA[
			update board set title=#{title},content=#{content} where board_id = #{board_id}
		]]>
	</select>

	<!--노하우, 질답 글 삭제 -->
	<select id="delete">
		<![CDATA[
			delete from board where board_id = #{board_id}
		]]>
	</select>
	
	<!-- 노하우, 질답 조회수 -->
 	<select id="hit" resultType="int"> 
