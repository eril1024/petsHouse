	</insert>
	
	<!-- 특정글에 대한 댓글 출력 -->
	<select id="getComment" resultMap="boardvo">
   <![CDATA[
	  select * from board b, member m where b.member_id=m.member_id and boardtype_id= 9 and pgroup = (select pgroup from board where board_id=#{board_id})
