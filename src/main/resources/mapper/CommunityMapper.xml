	<!--노하우 리스트 끌고오는거 -->
	<select id="getTipsList" resultMap="boardvo">
   <![CDATA[
      select * from board b, member m 
      where b.member_id= m.member_id
      and boardtype_id=5 order by pdate desc
   ]]>
	</select>
	
	<!-- 노하우 글쓰기 (이미지 추가해야함) -->
	<insert id="writeTips" parameterType="boardvo">
	<![CDATA[
		insert into board(board_id, title, content, pdate,hit, pgroup, pstep, pindent,hashtag, member_id, boardtype_id , category_id)
		values (board_seq.nextval, #{title}, #{content}, sysdate, 0, board_seq.currval, 0, 0, #{hashtag}, #{memberVO.member_id}, 5 , #{categoryVO.category_id})
 	]]>
	</insert>
	
	<!-- 노하우 특정글 출력 -->
	<select id="getTipsview" resultMap="boardvo">
   <![CDATA[
		select b.board_id, b.title, b.content, b.pdate,b.hit, b.pgroup,b.pstep, b.pindent,b.hashtag, m.member_id, m.nickname, b.boardtype_id 
		from board b, member m
		where b.member_id= m.member_id
		and b.board_id=#{board_id}
   ]]>
	</select>
	
	<!-- 노하우 검색 -->
	<select id="getTsearch" resultMap="boardvo">
   <![CDATA[
   		select * from board where content like '%'||#{keyword}||'%' and boardtype_id='5' or title like '%'||#{keyword}||'%' and boardtype_id='5'
   ]]>
	</select>
	
	<!-- 노하우 게시판  페이징처리용 -->
	<select id="getTipsWithPaging" resultMap="boardvo">
		<![CDATA[		
		SELECT * FROM (
			     SELECT ROWNUM AS RNUM, A.* FROM (
			     	select b.board_id, b.title, b.content, b.pdate,b.hit, b.pgroup,b.pstep, b.pindent,b.hashtag, m.member_id, m.nickname, b.boardtype_id 
			     	from  board b , member m
					where b.member_id = m.member_id
    				and b.boardtype_id= 5 order by board_id desc
			    ) A WHERE ROWNUM <= #{pageNum} * #{amount}
			) WHERE RNUM > (#{pageNum}-1) * #{amount}  
		]]>
	</select>
	
	<!-- 노하우 토탈카운트 페이징 처리하려고 데려옴.. -->
	<select id="getTiptalCount" resultType="int">
		<![CDATA[	
		select count(*) from board
		b , member m
		where b.member_id = m.member_id
		and b.boardtype_id= 5
		]]>
	</select>


